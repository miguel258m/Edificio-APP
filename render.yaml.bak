databases:
  - name: edificio-db
    databaseName: edificio_db
    user: edificio_user
    plan: free

services:
  # Backend API
  - type: web
    name: edificio-backend
    runtime: node
    plan: free
    buildCommand: cd backend && npm install
    startCommand: cd backend && npm start
    envVars:
      - key: NODE_ENV
        value: production
      - key: DATABASE_URL
        fromDatabase:
          name: edificio-db
          property: connectionString
      - key: JWT_SECRET
        generateValue: true
      - key: JWT_REFRESH_SECRET
        generateValue: true
      - key: ALLOWED_ORIGINS
        sync: false
    autoDeploy: true

  # Frontend Static Site
  - type: web
    name: edificio-frontend
    runtime: static
    plan: free
    buildCommand: cd frontend-mobile && npm install && npm run build
    staticPublishPath: frontend-mobile/dist
    envVars:
      - key: VITE_API_URL
        sync: false
    routes:
      - type: rewrite
        source: /*
        destination: /index.html
    autoDeploy: true
